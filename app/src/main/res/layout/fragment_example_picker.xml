<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ExamplePickerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="Image picker example"
        android:layout_gravity="center_horizontal"/>

    <com.simarjot.mulltiple_image_picker.ImagePickerView
        android:id="@+id/image_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:image_count="7"
        app:button_icon="@drawable/ic_baseline_library_add_24"
        app:button_background="@color/colorAccent"
        android:layout_gravity="center"/>

</FrameLayout>